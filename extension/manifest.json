{
  "manifest_version": 3,
  "name": "Highlight Extension",
  "author": {
    "email": "codewitharinzejustin@gmail.com"
  },
  "default_locale": "en",
  "homepage_url": "https://yourwebsite.com",
  "version": "1.0.0",
  "description": "A smart browser extension that lets you highlight any word on any webpage to instantly see its meaning, save it for later, and sync your vocabulary across devices.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "src/assets/icons/16.png",
      "48": "src/assets/icons/57.png",
      "128": "src/assets/icons/128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content-script.ts"
      ],
      "css": [
        "src/content/content-style.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_page": "src/options/index.html",
  "icons": {
    "16": "src/assets/icons/16.png",
    "48": "src/assets/icons/57.png",
    "128": "src/assets/icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension@example.com"
    }
  },
  "update_url": "https://your-update-url.com/updates.json"
}